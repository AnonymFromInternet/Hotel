{{template "base" .}}

{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="text-center mt-3">Login Page</h1>

                <form action="/user/login" method="post">
                    <div class="row">
                        <div class="col">
                            <div class="mb-3">
                                <label for="login" class="form-label">Login</label>

                                {{with .Form.Errors.Get "login"}}
                                    <label class="text-danger">{{.}}</label>
                                {{end}}

                                <input value="" type="text" class="form-control {{with .Form.Errors.Get "login"}} is-invalid {{end}}" name="login" id="login" autocomplete="off">
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>

                                {{with .Form.Errors.Get "password"}}
                                    <label class="text-danger">{{.}}</label>
                                {{end}}

                                <input value="" type="password" class="form-control {{with .Form.Errors.Get "password"}} is-invalid {{end}}" name="password" id="password" autocomplete="off">
                            </div>

                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">Login</button>
                </form>
            </div>
        </div>
    </div>
{{end}}